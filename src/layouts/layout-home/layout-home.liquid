---
layout: layout-base/layout-base.liquid
---

{% include header-nav/header-nav.liquid hide_search:true header_class:"header-nav--transparent" %}

<div class="layout-home scrollview js-header-watchscroll" data-controller="layout-home">
  <section class="layout-home__hero">
    <div class="layout-home__hero__background" data-layout-home-target="heroBg"></div>
    <div class="layout-home__hero__search-wrapper">
      {% include search/search.liquid class:"layout-home__search__input" type:"large" %}
      {% if locale == "hu" %}
      <div class="layout-home__hero__total h3" data-layout-home-target="total">Összesen <a href="/{{ locale }}/photos/"><span data-layout-home-target="totalVal"></span> fénykép</a></div>
      {% else %}
      <div class="layout-home__hero__total h3" data-layout-home-target="total"><a href="/{{ locale }}/photos/"><span data-layout-home-target="totalVal"></span> photos</a> in total</div>
      {% endif %}
    </div>
    <div class="layout-home__hero__content">
      <h3 class="layout-home__hero__headline">{{ description }}</h3>
      <div class="layout-home__hero__text">{{ content }}</div>
    </div>
  </section>
  {% include footer/footer.liquid %}
</div>
