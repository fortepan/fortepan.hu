---
layout: article/article.liquid
---

<ul class="projects" data-controller="projects">
  {% for project in projects %}
    <li class="project-item">
      <h3 class="project-title">{{ project.title }}</h3>
      <h6 class="project-date">{{ project.project_date }}</h6>
      <p>{{ project.description }}</p>
      <div class="project-funding">
        {%- if project.funding_logo -%}
        <div class="project-logo"><img src="{{ project.funding_logo }}" alt="{{ project.title | escapeHTML }}"></div>
        {%- endif -%}
        <p class="project-funding-info text-medium">{{ project.funding_info }}</p>
      </div>
    </li>
  {% endfor %}
</ul>