<section class="mapview" data-controller="mapview"
  data-action="mapview:show@document->mapview#show
               mapview:hide@document->mapview#hide
               mapview:clear@document->mapview#clearMarkers
               mapview:update@document->mapview#updateMarkers
               theme:toggleTheme@document->mapview#toggleMapStyles"
>
  <div class="map" id="MainMap" data-mapview-target="map"></div>

  <template id="mapmarker-template">
    <div class="mapmarker" data-mapview-target="marker" data-action=""></div>
  </template>
</section>