<div class="cookie-consent" data-controller="cookie-consent">
  <div class="cookie-consent__wrapper">
    <form
      class="cookie-consent__form"
      data-cookie-consent-target="form"
      data-action="submit->cookie-consent#disableFormSubmit keypress->cookie-consent#disableFormSubmitOnEnter"
    >
      <div class="cookie-consent__blurb styled-links">
        {% if locale == "hu" %} Ez a weboldal sütiket használ, hogy a lehető legjobb élményt nyújtsa Önnek.
        <a href="/hu/privacy/">További információ</a> {% elsif locale == "en" %} We use cookies to ensure that we give
        you the best experience on our website. <a href="/en/privacy/">View Policy</a>
        {% endif %}
      </div>
      <div class="cookie-consent__form__actions">
        <button class="button button--secondary button--medium" data-action="cookie-consent#hide">
          {{ lang[locale].decline }}
        </button>
        <button class="button button--primary button--medium" data-action="cookie-consent#accept">
          {{ lang[locale].allow_cookies }}
        </button>
      </div>
    </form>
  </div>
</div>
