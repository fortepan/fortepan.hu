<dialog-signin class="dialog dialog-signin">
  <div class="dialog__wrapper">
      {% include button-circular/button-circular.liquid icon:"close" id:"DialogSigninClose" trigger:"dialogSignin:hide" label:lang[locale].close class:"dialog__close" %}
      <h3 class="dialog__title">{{ lang[locale].login }}</h3>
      <div class="dialog__form">
        {% include dialog-input/dialog-input.liquid type:"text" name:"name" label:lang[locale].username_or_email %}
        {% include dialog-input/dialog-input.liquid type:"password" name:"password" label:lang[locale].password %}
        <a href="#" class="dialog__link dialog__link--small" data-trigger="dialogResetPasswordRequest:show|dialogSignin:hide">{{ lang[locale].password_forgot }} →</a>
        <a href="#" class="dialog__link dialog__link--small" data-trigger="dialogSignup:show|dialogSignin:hide">{{ lang[locale].signup_long }} →</a>
        <button class="button button--primary dialog__button">{{ lang[locale].signin }}</button>
      </div>
  </div>
</dialog-signin>
